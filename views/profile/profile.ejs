<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body{
            background-color: #dbdbdb;
        }
    </style>
</head>
<body>
<%- include('../templates/navbar'); %>

<div class="container bg-white shadow rounded w-50 my-4 text-center p-5 pb-4">
    <h1>Profile Page</h1>
    <div class="profile-image">
        <img src="https://eu.ui-avatars.com/api/?name=<%= user.username %>&size=150" class="rounded-circle" alt="Profile Picture" />
    </div>

    <div class="justify-content-center mt-4">
        <div>
            <h3>User ID: <%= user._id %></h3>
            <h3>Name: <%= user.username %></h3>
            <h3>Email: <%= user.email %></h3>
            <h3>Role: <%= capitalizeFirstLetter(user.role) %></h3>
        </div>
        <br>
        <div>
            <h3>Profile data info</h3>
            <h4>Created: <%= convertData(user.createdAt) %></h4>
            <h4>Updated: <%= convertData(user.updatedAt) %></h4>
        </div>
    </div>

    <div class="mt-4 mx-auto">
        <% if (user.role === 'admin') {%>
            <div class="mt-4 mx-auto">
                <form action="/products/admin" method="GET" style="display: inline;">
                    <button type="submit" class="btn btn-outline-primary fs-5">Product Management</button>
                </form>
                <form action="/brands/admin" method="GET" style="display: inline;">
                    <button type="submit" class="btn btn-outline-primary fs-5">Brand Management</button>
                </form>
                <form action="/categories/admin" method="GET" style="display: inline;">
                    <button type="submit" class="btn btn-outline-primary fs-5">Category Management</button>
                </form>
            </div>

            <div class="mt-4 mx-auto">
                <form action="/users/admin" method="GET" style="display: inline;">
                    <button type="submit" class="btn btn-outline-primary fs-5">User Management</button>
                </form>
<!--                <form action="/mongo" method="GET" style="display: inline;">-->
<!--                    <button type="submit" class="btn btn-outline-primary fs-5">Console</button>-->
<!--                </form>-->
                <form action="/products/admin/scrape" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-outline-primary fs-5">Scrap Data</button>
                </form>
            </div>
        <% } %>

        <div class="mt-4 mx-auto">
            <form action="/auth/update" method="GET" style="display: inline;">
                <button type="submit" class="btn btn-success fs-5">Update User</button>
            </form>
            <form action="/auth/logout" method="GET" style="display: inline;">
                <button type="submit" class="btn btn-secondary fs-5">Log Out</button>
            </form>
            <form action="/auth/delete-account" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-outline-danger fs-5">Delete Account</button>
            </form>
        </div>
    </div>
</div>

<div class="py-2 text-center fs-5 text-white bg-dark">
    <h4>Alisher Berik | IT-2308</h4>
</div>
</body>
</html>
