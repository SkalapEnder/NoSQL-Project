<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brands List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body{
            background-color: #dbdbdb;
        }
    </style>
</head>
<body>
<%- include('../templates/navbar'); %>

<div class="container bg-white my-5 text-center p-5 rounded mt-4">
    <h2 class="mb-4">Brands List</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>Brand ID</th>
            <th>Brand Name</th>
            <th>Description</th>
            <th>Headquarters</th>
            <th>Founded</th>
            <th>Website</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% brands.forEach((brand) => { %>
            <tr>
                <td><%= brand.brand_id %></td>
                <td><%= brand.brand_name %></td>
                <td><%= brand.brand_description %></td>
                <td><%= brand.headquarters %></td>
                <td><%= brand.founded_year %></td>
                <td><a href="<%= brand.website %>">Link</a></td>
                <td><a href="/products/filter/<%= brand.brand_id %>" class="btn btn-secondary">Find TV</a></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
<%- include('../templates/footer'); %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
